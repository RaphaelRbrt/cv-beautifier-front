#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

echo "\n🔍 TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ Type check failed. Please fix TypeScript errors."
  exit 1
fi

echo "\n🔍 ESLint check..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint check failed. Run 'npm run lint:fix' to auto-fix."
  exit 1
fi

echo "\n🔍 Prettier format check..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Format check failed. Run 'npm run format' to fix."
  exit 1
fi

echo "\n🏗️  Building application..."
npm run build
if [ $? -ne 0 ]; then
  echo "❌ Build failed. Please fix build errors."
  exit 1
fi

echo "\n✅ All pre-push checks passed! 🎉"
